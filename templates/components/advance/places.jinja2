<div class="section clearfix">
  <hr class="yellow-divider" />
  
  <h3><img src="/static/img/icon-globe.png" alt="Places Icon" />Places</h3>

  <fieldset>
    <legend>All places</legend>

    <label for="locations">Name</label>
    <div class="row">
      <div class="small-11 columns">
        <input
          id="locations"
          name="locations"
          type="text"
          class="text"
          value="{{ locations if locations else 'all places' }}" 
        />
      </div>
      <div class="small-1 columns">
        <span
          data-tooltip=""
          aria-haspopup="true"
          class="has-tip tip-top"
          data-selector="tooltip-lz9klwc5l"
          aria-describedby="tooltip-lz9klwc5l"
          title=""
        >
          <img
            style="min-width: 25px; text-align: left"
            class="help"
            src="/static/img/icon-help.png"
            alt="Help"
          />
        </span>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Origin</legend>

    <label for="pla_ori_name">Name</label>
